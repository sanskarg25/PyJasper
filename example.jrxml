                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Personal Info Report"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="200">
            <textField>
                <reportElement x="0" y="0" width="540" height="30"/>
                <textElement textAlignment="Left"/>
                <textFieldExpression><![CDATA["Name: " + $P{name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="40" width="540" height="30"/>
                <textElement textAlignment="Left"/>
                <textFieldExpression><![CDATA["Age: " + $P{age}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="80" width="540" height="30"/>
                <textElement textAlignment="Left"/>
                <textFieldExpression><![CDATA["City: " + $P{city}]]></textFieldExpression>
            </textField>
        </band>
